---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HorizontalShopItem from '../../components/HorizontalShopItem.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
// import type { StoreSchema } from 'src/content/config';

interface Props {
  page: {
    url: Record<'prev' | 'next', string>;
    data: CollectionEntry<'store'>[];
  };
}

export async function getStaticPaths({ paginate }) {
  const items = await getCollection('store');
  const sortedArr = items.sort(
    (a, b) => b.data.updatedDate.valueOf() - a.data.updatedDate.valueOf(),
  );
  // return arr.map((post) => {
  //   return {
  //     params: { id: post.id, pageSize: 10  },
  //     props: { post }
  //   };
  // });
  return paginate(sortedArr, { pageSize: 10 });
}

const { page } = Astro.props;
// const {data}: {data:  }= page;
---

<BaseLayout title="Store" sideBarActiveItemID="store">
  <ul>
    {
      page.data.map(({ data, slug }) => (
        <>
          <HorizontalShopItem
            title={data.title}
            img={data.heroImage}
            desc={data.description}
            pricing={data.pricing}
            oldPricing={data.oldPricing}
            checkoutUrl={data.checkoutUrl}
            badge={data.badge}
            url={'/store/' + slug}
            custom_link={data.custom_link}
            custom_link_label={data.custom_link_label}
          />
          <div class="divider my-0" />
        </>
      ))
    }
  </ul>

  <div class="flex justify-between">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="btn btn-ghost my-10 mx-5">
          {' '}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
          </svg>{' '}
          Previous page
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class="btn btn-ghost my-10 mx-5">
          Next page{' '}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            {' '}
            <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
          </svg>
        </a>
      ) : (
        <div />
      )
    }
  </div>
</BaseLayout>
